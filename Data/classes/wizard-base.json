    "a spellbook"
  ],
  "Class Features": [
    {
      "name": "Spellcasting",
      "desc": "You have a spellbook containing spells and can prepare spells from it each day."
    },
    {
      "name": "Arcane Recovery",
      "desc": "Once per day when you finish a short rest, you can recover spell slots."
    },
    {
      "name": "Arcane Tradition",
      "desc": "Choose an arcane tradition at 2nd level that grants additional features."
    },
    {
      "name": "Cantrip Formulas (Optional)",
      "desc": "At 3rd level, you can replace one cantrip you know with another from the wizard spell list."
    },
    {
      "name": "Ability Score Improvement",
      "desc": "Increase one ability score by 2, or two ability scores by 1 at levels 4, 8, 12, 16, and 19."
    },
    {
      "name": "Spell Mastery",
      "desc": "At 18th level, you can cast one 1st-level and one 2nd-level spell at will."
    },
    {
      "name": "Signature Spells",
      "desc": "At 20th level, you can cast two 3rd-level spells without expending spell slots."
    }
  ],
